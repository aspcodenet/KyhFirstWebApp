@page
@model FirstWebApp.Pages.OrderInfoModel
@{
}

<h1>@Model.Id</h1>
<h2>@Model.CustomerName, @Model.ContactName</h2>
@Model.Datum

<table class="table">
    @foreach (var detail in Model.OrderRows)
    {
        <tr>
            <td>@detail.ProductName</td>
            <td>@detail.Quantity</td>
            <td>@detail.UnitPrice</td>
            <td>@detail.RowPrice()</td>
        </tr>
    }
</table>

